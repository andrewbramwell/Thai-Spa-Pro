---
import { Picture } from "astro:assets";
const { title, image } = Astro.props
---

<section id="int-hero">
    <h1 id="home-h">{title}</h1>
    <picture class="cs-background">
                <!--Mobile Image-->
                <source media="(max-width: 600px)" srcset="/assets/images/landing-bg-m.webp">
                <!--Tablet and above Image-->
                <source media="(min-width: 601px)" srcset="/assets/images/landing-bg.webp">
                <img loading="lazy" decoding="async" src="/assets/images/landing-bg.jpg" alt="massage" width="1280" height="568" aria-hidden="true">
    </picture>
</section>

<style lang="less">
 /* Mobile */
    @media only screen and (min-width: 0em) {
        #int-hero {
            min-height: 30vh;
            padding-top: (50/16rem);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
            z-index: 1;

            &:before {
                content: "";
                width: 100%;
                height: 100%;
                background: var(--sectionColor);
                opacity: 0.85;
                display: block;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
            }

            picture {
                width: 100%;
                height: 100%;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -2;

                img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    position: absolute;
                    top: 0;
                    left: 0;
                }
            }

            h1 {
                font-size: var(--headerFontSize);
                text-align: center;
                width: 96%;
                max-width: (500/16rem);
                margin: 0 auto;
                margin-top: (70/16rem);
                margin-bottom: (30/16rem);
                color: var(--headerColor);
                position: relative;
            }

            p {
                text-align: center;
                width: 96%;
                max-width: (400/16rem);
                margin: auto;
                margin-bottom: (30/16rem);
                color: #fff;
                display: block;
            }
        }
    }

    /* Small Desktop */
    @media only screen and (min-width: 64em) {
        #int-hero {
            height: auto;
            min-height: (300/16rem);
            padding-top: (180/16rem);
            background-attachment: fixed;
            padding-block-end: (100/16rem);
        }
    }

/* Dark Mode */
@media only screen and (min-width: 0rem) {
    body.dark-mode {
        #int-hero {
            background-color: var(--dark);
            
            &:before {
                background-color: var(--dark);
                opacity: 0.8;
            }
            
            picture {
                img {
                    opacity: 0.8;
                }
            }
            
            h1 {
                color: var(--bodyTextColorWhite);
            }
            
            p {
                color: var(--bodyTextColorWhite);
            }
        }
    }
}
</style>
