---
import { t, getLocalePath } from "i18n:astro";

interface Props {
  namespace: string;
}

const { namespace } = Astro.props;
---

<!-- ============================================ -->
<!--                    Hero                      -->
<!-- ============================================ -->

<section id="hero-358">
    <div class="cs-container">
        <div class="cs-flex-group">
            <h1 class="cs-title">{t(`${namespace}:hero.title`)}</h1>
            <p class="cs-text">
                {t(`${namespace}:hero.text`)}
            </p>
            <div class="cs-button-group">
                <a href={getLocalePath(t(`${namespace}:hero.cta1Link`))} class="cs-button-solid">
                    {t(`${namespace}:hero.cta1`)}
                </a>
            </div>
        </div>
        <div class="cs-image-group">
            <!-- Picture -->
            <picture class="cs-person">
                <source media="(max-width: 600px)" srcset={t(`${namespace}:hero.imageMobileWebp`)}>
                <source media="(min-width: 601px)" srcset={t(`${namespace}:hero.imageDesktopWebp`)}>
                <img aria-hidden="true" loading="lazy" decoding="async" 
                    src={t(`${namespace}:hero.imageFallbackJpg`)} 
                    alt={t(`${namespace}:hero.imageAlt`)} 
                    width="831" height="674">
            </picture>
        </div>
    </div>
    <picture class="cs-background">
        <source media="(max-width: 600px)" srcset="/assets/images/hero-bg-m.webp">
        <source media="(min-width: 601px)" srcset="/assets/images/hero-bg.webp">
        <img decoding="async" src="/assets/images/hero-bg.jpg" alt="cleaner" width="2250" height="1500" aria-hidden="true">
    </picture>
</section>

<style lang="less">

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #hero-358 {
        /* Centers button */
        text-align: center;
        /* 150px - 350px */
        padding: clamp(9rem, 25.95vw, 21.875rem) (16/16rem);
        padding-bottom: 0;
        position: relative;
        z-index: 1;
        /* prevents overflow from the lines extending past the screen width */
        overflow: hidden;
        background-color: var(--sectionColor);

        .cs-background {
            /* Background Image */
            width: 100%;
            height: 100%;
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -2;

            &:before {
                /* White Color Overlay */
                content: "";
                width: 100%;
                height: 100%;
                background: #fff;
                opacity: 0.85;
                position: absolute;
                display: block;
                top: 0;
                left: 0;
                z-index: 1;
                /* prevents the cursor from interacting with it */
                pointer-events: none;
            }

            img {
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                /* Makes image act like a background-image */
                object-fit: cover;
                /* places the top of the image at the top of the parent */
                object-position: top;
            }
        }

        .cs-container {
            width: 100%;
            max-width: (1280/16rem);
            margin: auto;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            /* 48px - 64px */
            gap: clamp(3rem, 7vw, 4rem);
        }

        .cs-flex-group {
            max-width: (626/16rem);
            margin: auto;
            display: flex;
            align-items: flex-start;
            justify-content: center;
            flex-wrap: wrap;
            box-sizing: border-box;
        }

        .cs-title {
            font-weight: 900;
            line-height: 1.2em;
            text-align: center;
            width: 100%;
            margin: 0 auto (16/16rem);
            color: var(--headerColor);
            position: relative;
        }

        .cs-accent {
            color: var(--primaryLight);
        }

        .cs-text {
            line-height: 1.5em;
            text-align: center;
            width: 100%;
            /* changes to 442px at desktop */
            max-width: (700/16rem);
            /* 32px - 40px */
            margin: 0 auto clamp(2rem, 4vw, 2.5rem);
            /* 24px - 40px */
            margin-bottom: clamp(1.75rem, 4vw, 2.5rem);
            color: var(--bodyTextColor);
        }

        .cs-button-group {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: (24/16rem);
        }

        .cs-image-group {
            /* Full width on mobile */
            width: 100%;
            height: auto;
            position: relative;
        }

        .cs-person {
            width: 100%;
            height: auto;
            position: relative;

            img {
                width: 100%;
                height: auto;
                display: block;
            }
        }
    }
}

/* Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
    #hero-358 {
        padding-bottom: (160/16rem);
        .cs-container {
            flex-direction: row;
            justify-content: flex-start;
        }

        .cs-flex-group {
            justify-content: flex-start;
            margin: 0;
        }

        .cs-topper,
        .cs-title,
        .cs-text {
            text-align: left;
            margin-left: 0;
        }

        .cs-text {
            max-width: (442/16rem);
        }

        .cs-button-group {
            justify-content: flex-start;
        }

        .cs-image-group {
            font-size: ~"min(1vw, 0.8em)"; /* Smaller size */
            width: (831/16em);
            height: (674/16em);
            position: absolute;
            bottom: (-150/16em);
            right: (-50/16em); /* Much less negative - keeps it on screen */
        }
    }
}

/* Large Desktop - 1700px - Scale back up and push right */
@media only screen and (min-width: 106.25rem) {
    #hero-358 {
        .cs-image-group {
            font-size: ~"min(1.4vw, 1em)"; /* Original size */
            right: (-217/16em); /* Original position */
        }
    }
}

/* Dark Mode */
@media only screen and (min-width: 0rem) {
    body.dark-mode {
        #hero-358 {
            .cs-background {
                background-color: var(--dark);
                &:before {
                    background-color: var(--dark);
                    opacity: 0.8;
                }
                img {
                    opacity: 0.8;
                }
            }
            .cs-topper {
                color: var(--primaryLight);
            }
            .cs-title {
                color: var(--bodyTextColorWhite);
            }
            .cs-text {
                color: var(--bodyTextColorWhite);
                opacity: 0.9;
            }
            .cs-picture {
                border: 6px solid var(--accent);
            }
            .cs-button-transparent {
                &:before {
                    background-color: var(--accent);
                }
            }
            .cs-tag,
            .cs-number {
                color: var(--bodyTextColorWhite);
            }
        }
    }
}

</style>