---
import BaseLayout from "@layouts/BaseLayout.astro";
import PricingSection from "@components/PricingSection.astro";
import Landing from "@components/Landing.astro";
import CTASection from "@components/CTASection.astro";
import TableSection from "@components/TableSection.astro";
import FAQ from "@components/FAQ.astro";
import { t, getLocalePath } from "i18n:astro";
---

<BaseLayout
  title={t("pricing:layout.title")}
  description={t("pricing:layout.description")}
  preloadedImage=""
>
  <!-- ============================================ -->
  <!--                    LANDING                   -->
  <!-- ============================================ -->

  <Landing title={t("pricing:landing.title")} />

  <!-- ============================================ -->
  <!--                  Pricing                     -->
  <!-- ============================================ -->

  <PricingSection namespace="pricing" />

  <!-- ============================================ -->
  <!--                    FAQ                       -->
  <!-- ============================================ -->

  <FAQ namespace="pricing" />


    <!-- ============================================ -->
    <!--                    Table                     -->
    <!-- ============================================ -->
                                    
    <TableSection namespace="pricing" />
  

<!-- ============================================ -->
<!--                     CTA                      -->
<!-- ============================================ -->

<CTASection namespace="websites" />
                                
</BaseLayout>

