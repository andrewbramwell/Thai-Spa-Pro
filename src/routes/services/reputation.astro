---
import BaseLayout from "@layouts/BaseLayout.astro";
import HeroSection from "@components/HeroSection.astro";
import BenefitsSection from "@components/BenefitsSection.astro";
import ReviewsSection from "@components/ReviewsSection.astro";
import FeaturesSection from "@components/FeaturesSection.astro";
import CTASection from "@components/CTASection.astro";

import { t } from "i18n:astro";
---

<BaseLayout title={t("reputation:layout.title")} description={t("reputation:layout.description")} preloadedImage="">

<!-- ============================================ -->
<!--                    Hero                      -->
<!-- ============================================ -->

<HeroSection namespace="reputation" />

<!-- ============================================ -->
<!--                  Benefits                    -->
<!-- ============================================ -->

<BenefitsSection namespace="reputation" />

<!-- ============================================ -->
<!--                   Reviews                    -->
<!-- ============================================ -->

<ReviewsSection namespace="reputation" />

                              
<!-- ============================================ -->
<!--                  Features                    -->
<!-- ============================================ -->

<FeaturesSection namespace="reputation" itemCount={5} />

<!-- ============================================ -->
<!--                     CTA                      -->
<!-- ============================================ -->

<CTASection namespace="reputation" />

</BaseLayout>